---
import MainLayout from "../layouts/MainLayout.astro";
import CardShowStatus from "../components/status-card/CardShowStatus.astro";
import CardShowStatusFallback from "../components/fallbacks/CardShowStatusFallback.astro";
import Filters from "../components/filter-form/Filters.astro";
import HolidayListStatic from "../components/holidays/HolidayListStatic.astro";
import {FilterFallback} from "../components/fallbacks/FilterFallback";
---
<MainLayout>
    <CardShowStatus server:defer>
        <CardShowStatusFallback slot="fallback"/>
    </CardShowStatus>
    <Filters server:defer>
        <FilterFallback slot="fallback"/>
    </Filters>
    <HolidayListStatic />
</MainLayout>
